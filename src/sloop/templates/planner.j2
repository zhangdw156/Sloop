  "required_tools": {{ tool_chain | tojson }},
  "ground_truth": {{ tool_chain | tojson }},
  "initial_state": {"key": "value", "another_key": "another_value"},
  "expected_state": {"key": "new_value", "another_key": "modified_value"}
}

